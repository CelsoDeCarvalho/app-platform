{
    "name": "root",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "@dhis2/app-shell/**"
        ]
    },
    "devDependencies": {
        "@dhis2/cli-style": "^3.2.2",
        "husky": "^1.3.1"
    },
    "scripts": {
        "format": "d2-style js apply --all --no-stage",
        "docs:build": "cp -f CHANGELOG.md docs/",
        "docs:serve": "yarn docs:build && npx serve -s docs"
    },
    "husky": {
        "hooks": {
            "commit-msg": "d2-style commit check",
            "pre-commit": "d2-style js apply"
        }
    }
}
