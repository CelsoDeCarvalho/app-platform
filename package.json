{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@dhis2/cli-style": "^2.0.1",
    "husky": "^1.3.1"
  },
  "scripts": {
    "format": "d2-style js apply --all --no-stage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "d2-style commit check",
      "pre-commit": "d2-style js apply"
    }
  }
}
